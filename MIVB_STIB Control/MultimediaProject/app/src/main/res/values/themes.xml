<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ControlMetro" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mivb_red</item>
        <item name="colorPrimaryVariant">@color/mivb_red_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mivb_blue</item>
        <item name="colorSecondaryVariant">@color/mivb_blue_variant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#016EB9</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="buttonTransparent" parent="Widget.AppCompat.Button.Borderless">
        <item name="colorAccent">@color/transparent</item>
        <item name="colorPrimary">@color/transparent</item>

    </style>

</resources>